<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	 <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.7.2/p5.js"></script>
	 <script src="http://cdnjs.cloudflare.com/ajax/libs/p5.js/0.7.2/addons/p5.dom.js"></script>
	<script src = "/javascripts/drawMenu.js" ></script>
	<script src = "/javascripts/generic.js" ></script>
	<script src = "/javascripts/countChildren.js" ></script>
	<script src = "/javascripts/preprocesamiento.js" ></script>
	<script src = "/javascripts/lineSystem.js" ></script>
	<script src = "/javascripts/filter.js" ></script>
	<script src = "/javascripts/ordering.js" ></script>
	<script src = "/javascripts/runtimeTests.js" ></script>

  </head>
  <body>
	<!-- Scroll for tax-->
	<div class="sideScroll">
			<input type="range" min="0" max="1000" value="0" oninput="onScrollChange(this.value)" onchange="onScrollChange(this.value)"class="range vertical-lowest-first sideScrollSlider" id="scroll">
	</div>

	<div class="optionSquare">
		
		<div class="encircledBox">	
		<label>Congruent</label>
		<label class="switch">
			<input type="checkbox" name="congruece" onclick="onCongruenceChange()"/>
		 <span class="slider_switch round congruence_slider_switch"></span>
		</label>
		</div>

		<div class="encircledBox">
		<label>Split</label>
		<label class="switch">
			<input type="checkbox" name="split" onclick="onSplitChange()"/>
		 <span class="slider_switch round split_slider_switch"></span>
		</label>
		</div>

		<div class="encircledBox">
		<label>Merged</label>
		<label class="switch">
			<input type="checkbox" name="merge" onclick="onMergeChange()"/>
		 <span class="slider_switch round merge_slider_switch"></span>
		</label>
		</div>

		<div class="encircledBox">
		<label>Moved</label>
		<label class="switch">
			<input type="checkbox" name="move" onclick="onMoveChange()"/>
		 <span class="slider_switch round move_slider_switch"></span>
		</label>
		</div>

		<div class="encircledBox">
		<label>Renamed</label>
		<label class="switch">
			<input type="checkbox" name="rename" onclick="onRenameChange()"/>
		 <span class="slider_switch round rename_slider_switch"></span>
		</label>
		</div>

		<div class="encircledBox">
		<label>Added</label>
		<label class="switch">
			<input type="checkbox" name="add" onclick="onAddedChange()"/>
		 <span class="slider_switch round add_slider_switch"></span>
		</label>
		</div>

		<div class="encircledBox">
		<label>Excluded</label>
		<label class="switch">
			<input type="checkbox" name="removes" onclick="onRemovedChange()"/>
		 <span class="slider_switch round remove_slider_switch"></span>
		</label>
		</div>

		<div class="horizontal_separator"></div>

		<div class="encircledBox">
		<label>Lines</label>
			<label class="switch">
			<input type="checkbox" name="lineas" onclick="onLineChange()" checked/>
		 <span class="slider_switch round other_slider_switch"></span>
		</label>
		</div>

		<div class="encircledBox">
		<label>Bars</label>
		<label class="switch">
			<input type="checkbox" name="bars" onclick="onBarsChange()"/>
		 <span class="slider_switch round other_slider_switch"></span>
		</label>
		</div>
		
		<div class="encircledBox">
		<label></label>
		<label class="switch">
		<input type="checkbox" name="space"/>
		</label>
		</div>
		
		<button class="buttonsHeader" onclick="onExpand()">Expand</button>
		<!--Function comes from drawing system -->
		<button class="buttonsHeader" onclick="sort_and_update_lines()">Sort</button>

		<!--Function comes from drawing system -->
		<button class="buttonsHeader" onclick="resetTrees()">Reset</button>
		
		<div class="slidecontainer">
		<input type="range" min="0" max="100" value="50" class="slider" id="myRange" 
		oninput="onSliderChange(this.value)" onchange="onSliderChange(this.value)">
		</div>

		<!-- <button type="button" class="matrix"  onclick="onMatrixClicked()"> <img src = "/images/matrixButton.png" ></img></button>-->
		<button class="buttonsHeader" onclick="onExpand()">Matrix</button>
		<!--Function comes from drawing system -->
		<!--Function comes from ordering menu script -->
		<button type=“button” class="buttonsHeader" onclick="onSalir()">Exit</button>

	</div>

	<div class="main_body left top">
		<!--<br>
		<label>Statistics</label>-->
		<br>
		<table id="table_title" class="table_statistic">
		</table>
		<br>
		<hr class="separator">
		<br>
		<table id="table_taxon_id" class="table_statistic">
		</table>
		<br>
		<hr class="separator">
		<br>
		<table id="table_rank_id" class="table_statistic">
		</table>

		<div id="sketch-holder" class="main_body right top">
		<!-- Our sketch will go here! -->
		<script src = "/javascripts/drawTree.js" ></script>
		</div>

  		</div>

  		<!-- -->
		<div class="infoSquare">
		<p class="infoTitle"></p>
		<p class="infoBody" ></p>
		</div>
  		<!-- -->
		
		

  </body>
</html>
